<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alfidh.tvmov">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TVMov">
        <activity android:name=".view.detail.DetailActivity"
            android:theme="@style/Theme.TVMov.NoActionBar"
            android:parentActivityName=".view.home.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.home.MainActivity"/>
        </activity>
        <activity android:name=".view.home.MainActivity" />
        <activity
            android:name=".view.splash.SplashScreenActivity"
            android:theme="@style/Theme.TVMov.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>