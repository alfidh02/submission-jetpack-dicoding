<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alfidh02.tvmov">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TVMov">
        <activity android:name="com.alfidh02.tvmov.view.favorite.FavoriteActivity"
            android:label="@string/favorite"
            android:theme="@style/Theme.TVMov.Custom"/>
        <activity
            android:name="com.alfidh02.tvmov.view.detail.DetailActivity"
            android:parentActivityName="com.alfidh02.tvmov.view.home.MainActivity"
            android:theme="@style/Theme.TVMov.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.alfidh02.tvmov.view.home.MainActivity" />
        </activity>
        <activity android:name="com.alfidh02.tvmov.view.home.MainActivity" />
        <activity
            android:name="com.alfidh02.tvmov.view.splash.SplashScreenActivity"
            android:theme="@style/Theme.TVMov.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>